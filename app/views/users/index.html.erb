

<div class="home" align="center">
	<h1>All users</h1>
	    <div id="home_start" style="width:100%;">
	      <%= render :partial=>"create" %>
	    </div>
	<br />
	<%#= link_to 'New User', new_user_path %>
	<div onclick="open_new();">New User</div>
	<div id="homenew" style="display:none;cursor:homenew;border:1px solid;width: 22%;">
		<h1>New user</h1>
		<%= render 'form' %>
	</div>
	<div id="homeshow" style="display:none;cursor:homenew;border:1px solid;width: 22%;">
		<h1>show user</h1>
		<%= render 'show' %>
	</div>
</div>

<script type="text/javascript">
	function open_new()
	{
	  $("#homenew").show();
	}

	function hide_new()
	{
	  $("#homenew").hide();
	}

	$(function(){
	   $('.pagination a').attr('data-remote', 'true')
	});

	function userdelete(id)
	{
	      $.ajax({
	        type: "DELETE",
	        url: "users_destroy",
	        data: {"id": id},
	        dataType : 'json',
	        success: function(data)
	        {
				$("#urow_"+id).remove();
	        }
	      });

	}
	function userdeletehtml(id)
	{
	      $.ajax({
