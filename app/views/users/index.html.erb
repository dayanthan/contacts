	        data: {"id": id},
	        dataType : 'html',
	        success: function(data)
	        {	
	        	alert("test");
				window.location.reload(true)
	        }
	      });

	}
	function usershow(id)
	{
	      $.ajax({
	        type: "DELETE",
	        url: "users_show",
	        data: {"id": id},
	        dataType : 'script',
	        // success: function(data)
